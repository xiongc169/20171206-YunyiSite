<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
	<!-- 数据库驱动包位置 -->
	<classPathEntry location="E:\GitHub\mysql-connector-java-8.0.12.jar" />

	<context id="yoong">

		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://192.168.119.131:3306/yoong?characterEncoding=utf8"
			userId="root" password="123456" />

		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<javaModelGenerator targetPackage="org.yoong.domain"
			targetProject="yunyisite-domain">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<sqlMapGenerator targetPackage="yoong"
			targetProject="yunyisite-dao\src\main\resources">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>

		<!-- 生成Mapper接口 -->
		<javaClientGenerator targetPackage="org.yoong.dao"
			targetProject="yunyisite-dao" type="XMLMAPPER">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>

		<table tableName="account"></table>
		<table tableName="admin"></table>
		<table tableName="customer"></table>
		<table tableName="menu"></table>
		<table tableName="resource"></table>
		<table tableName="role"></table>
		<table tableName="role_menu"></table>
		<table tableName="role_resource"></table>
		<table tableName="user_role"></table>
	</context>
</generatorConfiguration>